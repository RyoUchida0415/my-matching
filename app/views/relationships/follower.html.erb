<%= render 'users/header' %>

<div class="main clearfix">
<div class="col-md-3">
	<%= render 'users/sidebar', user: current_user %>
</div>

<div class="col-md-9">
	<h2>フォロー会員</h2>
	<!-- フォローが存在するならば -->
	<% if @users.count > 0 %>
	<%= render '/users/index', users: @users %>
	<!-- フォローが存在しないならば -->
	<% else %>
	<p>ユーザーはいません</p>
	<% end %>
</div>
</div>

<%= render 'users/footer' %>