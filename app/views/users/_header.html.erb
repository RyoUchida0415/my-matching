<header>
	<div class="logo">
	  <%= link_to root_path do %>
      <%= image_tag('icon2.jpg') %>
      <% end %>
  </div>
	<!--ログインしたとき-->
	<% if user_signed_in? %>
	<ul class="nav navbar-nav navbar-right" >
		<li class="aikonn">
			<%= link_to 'about', homes_about_path, class: 'btn btn-primary' %>
		</li>
		<li class="aikonn">
			<%= link_to 'マイページ', user_path(current_user), class: 'btn btn-warning' %>
		</li>
		<li class="aikonn">
			<%= link_to 'ブログ投稿', new_blog_path, class: 'btn btn-info' %>
		</li>
		<li class="aikonn">
			<%= link_to '会員一覧', users_path, class: 'btn btn-success' %>
		</li>
		<li class="aikonn">
			<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
		</li>
	</ul>

	<% else %>

	<!--ログインしていないとき-->
	<ul class="nav navbar-nav navbar-right" >
		<li class="aikonn">
			<%= link_to 'about', homes_about_path, class: 'btn btn-primary' %>
		</li>
		<li class="aikonn">
			<%= link_to 'ログイン',  new_user_session_path, class: 'btn btn-danger' %>
		</li>
		<li class="aikonn">
			<%= link_to '新規登録', new_user_registration_path, class: 'btn btn-success' %>
		</li>
	</ul>
	<% end %>
</header>