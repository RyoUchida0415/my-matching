<%= render 'users/header' %>

<div class="col-md-3">
	<%= render 'users/sidebar', user: current_user %>
</div>

<div class="col-md-9">
	<h1>会員一覧</h1>
	<hr>
		<% @users.each do |user| %>
			<%= link_to user_path(user) do %>
				<%= attachment_image_tag user, :image,format:'jpeg', fallback: "no_image.jpg", size:'300x300'  %>
			<% end %>
				<%= user.nickname %>
			<%= user.age %>歳
			<%= user.prefecture %>
			<div>
				<%= user.introduction %>
			</div>
		<% end %>
	</hr>
</div>