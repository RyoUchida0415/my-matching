<%= render 'users/header' %>

<div class="main clearfix">
	<div class="col-md-3">
		<%= render 'users/sidebar', user: current_user %>
	</div>

	<div class="col-md-9">
		<h2>会員一覧</h2>
		<hr>

		<%= flash[:success] %>
  		<%= flash[:danger] %>

		<% @users.each do |user| %>
			<div class="one-user">
				<%= link_to user_path(user) do %>
					<%= attachment_image_tag user, :image,format:'jpeg', fallback: "no_image.jpg", size:'100x100'  %>
				<% end %>
				<%= user.nickname %>
				<%= user.age %>歳
				<%= user.prefecture %>
				<div>
					<%= user.introduction %>
				</div>
			</div>
		<% end %>
	</div>
</div>
<%= paginate @users %>
<%= render 'users/footer' %>