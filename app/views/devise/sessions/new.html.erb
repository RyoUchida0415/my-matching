<%= render 'users/header' %>
<div class="login-body">
  <br>
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>
<br />
    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "ログイン" ,class: "btn btn-info"%>
    </div>
  <% end %>
  <br>
  <div>
    <%= link_to "topに戻る", root_path ,class: 'btn btn-primary' , data: {"turbolinks" => false}%>
  </div>
  <br>
</div>

<%= render 'users/footer' %>