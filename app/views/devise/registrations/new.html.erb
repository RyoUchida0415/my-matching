<%= render 'users/header' %>

<div class="login-body">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス%><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><p>(本アプリは２０〜５０歳までが対象です)</p>
    <%= f.select :age, User.ages.keys,{} %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.select :prefecture, User.prefectures.keys,{} %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <label><%= f.radio_button :sex, "true" %>男性</label>
    <label><%= f.radio_button :sex, "false" %>女性</label>
  </div>

  <div class="field">
    <%= f.label :自己紹介文 %><br />
    <%= f.text_area :introduction, size: "50x3",autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :プロフィール画像 %><br />
    <%= f.attachment_field :image %>
  </div>

  <br>

  <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "新規登録" ,class: "btn btn-info"%>
  </div>
  <% end %>

  <br>
  <%= link_to "topに戻る", root_path ,class: 'btn btn-primary' , data: {"turbolinks" => false}%>
</div>